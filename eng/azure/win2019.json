{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "The name of the VM to create."
      }
    },
    "dnsName": {
      "type": "string",
      "defaultValue": "[parameters('vmName')]",
      "metadata": {
        "description": "The DNS name for the VM. Defaults to the VM name."
      }
    },
    "adminUsername": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "The admin username."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The admin password."
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_DS1_v2",
      "metadata": {
        "description": "The size of the VM to create. Defaults to 'Standard_DS1_v2'."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "The location in which to create the resources. Defaults to the default location for the resource group."
      }
    },
    "osDiskType": {
      "type": "string",
      "defaultValue": "Premium_LRS",
      "metadata": {
        "description": "The type of OS disk to use. Defaults to 'Premium_LRS'."
      }
    },
    "autoShutdownStatus": {
      "type": "string",
      "defaultValue": "Enabled",
      "metadata": {
        "description": "The status of auto-shutdown. Defaults to 'Enabled'."
      }
    },
    "autoShutdownTime": {
      "type": "string",
      "defaultValue": "19:00",
      "metadata": {
        "description": "The time at which the VM will auto-shutdown. Defaults to 19:00 (7pm)."
      }
    },
    "autoShutdownTimeZone": {
      "type": "string",
      "defaultValue": "Pacific Standard Time",
      "metadata": {
        "description": "The time-zone for 'autoShutdownTime'. Defaults to 'Pacific Standard Time'."
      }
    }
  },
  "variables": {
    "diagnosticsExtensionName": "Microsoft.Insights.VMDiagnosticsSettings",
    "aadLoginExtensionName": "AADLoginForWindows",
    "networkTemplateUrl": "[uri(deployment().properties.templateLink.uri, 'common/network.json')]"
  },
  "resources": [
    {
      "name": "networkResources",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('networkTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "baseName": "[parameters('vmName')]",
          "dnsName": "[parameters('dnsName')]",
          "location": "[parameters('location')]"
        }
      }
    },
    {
      "name": "[parameters('vmName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2018-06-01",
      "location": "[parameters('location')]",
      "dependsOn": [
        "networkResources"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "storageProfile": {
          "osDisk": {
            "createOption": "fromImage",
            "managedDisk": {
              "storageAccountType": "[parameters('osDiskType')]"
            }
          },
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2019-Datacenter",
            "version": "latest"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[reference('networkResources').outputs.nicId]"
            }
          ]
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "enableAutomaticUpdates": true,
            "provisionVmAgent": true
          }
        },
        "licenseType": "Windows_Server"
      },
      "identity": {
        "type": "systemAssigned"
      },
      "tags": {}
    },
    {
      "name": "[concat('shutdown-computevm-', parameters('vmName'))]",
      "type": "Microsoft.DevTestLab/schedules",
      "apiVersion": "2017-04-26-preview",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
      ],
      "properties": {
        "status": "[parameters('autoShutdownStatus')]",
        "taskType": "ComputeVmShutdownTask",
        "dailyRecurrence": {
          "time": "[parameters('autoShutdownTime')]"
        },
        "timeZoneId": "[parameters('autoShutdownTimeZone')]",
        "targetResourceId": "[resourceId('Microsoft.Compute/virtualMachines', parameters('vmName'))]",
        "notificationSettings": {
          "status": "Disabled",
          "notificationLocale": "en",
          "timeInMinutes": "30"
        }
      },
      "tags": {}
    },
    {
      "name": "[concat(parameters('vmName'),'/', variables('aadLoginExtensionName'))]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "2017-12-01",
      "location": "[parameters('location')]",
      "properties": {
        "publisher": "Microsoft.Azure.ActiveDirectory",
        "type": "AADLoginForWindows",
        "typeHandlerVersion": "0.3",
        "autoUpgradeMinorVersion": true
      },
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName')]"
      ]
    }
  ],
  "outputs": {
    "adminUsername": {
      "type": "string",
      "value": "[parameters('adminUsername')]"
    }
  }
}
